import glob

includes = [
    "{repo_dir}",
    "{repo_dir}/symlinks/glm",
    "{repo_dir}/symlinks/metrolib",
    "{repo_dir}/symlinks/metron",
]

pinwheel_ok = hancho(hancho.base_rules.check_cpp, in_src = "core/pinwheel_core.h", includes=includes)
pinwheel_sv = hancho(hancho.metron.convert, in_src = "core/pinwheel_core.h", includes=includes)

libsim = hancho(
    hancho.base_rules.cpp_lib,
    in_srcs = glob.glob("simulator/*.cpp"),
    out_lib = "libsimulator.a",
    includes = includes
)

libsoc = hancho(
    hancho.base_rules.cpp_lib,
    in_srcs = glob.glob("soc/*.cpp"),
    out_lib = "libsoc.a",
    includes = includes
)

libtools = hancho(
    hancho.base_rules.cpp_lib,
    in_srcs = glob.glob("tools/*.cpp"),
    out_lib = "libtools.a",
    includes = includes
)

